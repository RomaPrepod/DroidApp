<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/selector_default"
	android:clickable="true"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="16dp"
		>

		<TextView
			android:id="@+id/title"
			style="@style/RobotoMedium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Лекция 1. Введение"
			android:textColor="@color/header"
			android:textSize="16sp"
			/>

		<TextView
			android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="6dp"
			android:paddingTop="6dp"
			android:text="23.01.2017"
			android:textColor="@color/gray_text"
			/>

		<TextView
			android:id="@+id/description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Рассматривается примение дизайна, правила интеграции гипертекстовой разметки в шаблон сайта построенного на 1С-Битрикс."
			android:textColor="@color/header"
			/>
	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_gravity="bottom"
		android:layout_marginLeft="16dp"
		android:background="@color/border_bottom"
		/>
</FrameLayout>