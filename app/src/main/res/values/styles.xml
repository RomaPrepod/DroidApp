<resources>

	<style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
		<item name="titleTextStyle">@style/AppTheme.Toolbar.Title</item>
		<item name="subtitleTextAppearance">@style/AppTheme.Toolbar.Title</item>
		<item name="colorControlNormal">@android:color/white</item>
	</style>

	<style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">0.5dp</item>
		<item name="android:background">@color/divider</item>
	</style>

	<style name="RobotoMedium">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="RobotoBold">
		<item name="android:textStyle">bold</item>
	</style>

	<style name="FullWidthCard">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="cardCornerRadius">0dp</item>
		<item name="cardPreventCornerOverlap">false</item>
		<item name="cardUseCompatPadding">true</item>
		<item name="cardElevation">3dp</item>
		<item name="cardBackgroundColor">@android:color/white</item>
		<item name="android:layout_marginLeft">-4dp</item>
		<item name="android:layout_marginRight">-4dp</item>
		<item name="android:layout_marginBottom">-6dp</item>
	</style>

	<style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorControlNormal">@color/colorAccent</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="buttonBarButtonStyle">@style/AlertDialogStyle.Buttons</item>
	</style>

	<style name="AlertDialogStyle.Buttons" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/colorAccent</item>
	</style>
</resources>